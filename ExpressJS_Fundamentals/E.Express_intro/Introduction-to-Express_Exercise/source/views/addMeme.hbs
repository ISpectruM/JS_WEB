    <h1>Add New Meme</h1>
    <div class="container">
        <form action="/memes/addMeme" enctype=multipart/form-data method="POST">
            <label for="memeTitle">Title</label>
            <input type="text" id="memeTitle" name="memeTitle" placeholder="The title of the meme">

            <select name='genreSelect' id="genreSelect">
                {{#each genres}}
                    {{> genre/option}}
                {{/each}}
            </select>

            <label for="meme">Meme URL</label>
            <input type="file" id="meme" name="meme" placeholder="Link to a meme">

            <input type="checkbox" name='status' id='status' checked> public

            <label for="memeDescription">Meme description</label>
            <textarea id="memeDescription" name="memeDescription" placeholder="Meme description" rows="10" cols="10"></textarea>

            <input type="submit" value="Submit">
        </form>
    </div>
    {{{message}}}